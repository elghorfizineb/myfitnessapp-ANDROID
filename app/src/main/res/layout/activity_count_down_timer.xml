<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".countDownTimer">


    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/malefemalenotfocus"
        android:text="Start your workout"
        android:layout_marginTop="60dp"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textcountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/malefemalenotfocus"
        android:text="00:00"
        android:textColor="@color/bossypink"
        android:textSize="80sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="START"
        android:background="@drawable/generalbuttonlayout"
        android:layout_below="@id/textcountdown"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:text="RESET"
        android:background="@drawable/generalbuttonlayout"
        android:layout_below="@id/textcountdown"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_height="wrap_content"/>


</RelativeLayout>